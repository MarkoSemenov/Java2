<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane  xmlns="http://javafx.com/javafx"
             xmlns:fx="http://javafx.com/fxml"
             fx:controller="AuthController"
             prefHeight="500" prefWidth="600" >

    <VBox alignment="CENTER" AnchorPane.topAnchor="200" AnchorPane.leftAnchor="200" >

        <TextField promptText="Login" prefHeight="30" fx:id="login"  />
        <PasswordField promptText="Password" prefHeight="30" fx:id="password"/>
        <Button text="Sing in"  prefWidth="200" prefHeight="30" lineSpacing="20" onAction="#entrance"  fx:id="enter"/>

    </VBox>

</AnchorPane>